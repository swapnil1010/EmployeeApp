@model List<Employee>

<h2>Employee List</h2>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Position</th>
        <th>Salary</th>
        <th></th>
    </tr>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.Id</td>
            <td>@employee.Name</td>
            <td>@employee.Address</td>
            <td>@employee.Mobile</td>
            <td>@employee.DOB</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = employee.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = employee.Id })
            </td>
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
